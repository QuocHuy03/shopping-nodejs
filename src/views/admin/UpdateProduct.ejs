<%- include('_layout/header.ejs') %>
<%- include('_layout/nav.ejs') %>


<div class="row">

  <section class="col-lg-12 connectedSortable">

    <div class="card card-primary">
      <div class="card-header">
        <h3 class="card-title">Sửa Sản Phẩm</h3>
      </div>
      <!-- /.card-header -->
      <!-- form start -->
      <form class="form-horizontal" action="/update-product" method="post">
        <input type="hidden" value="<%= dataProduct.id_product %>" name="id">
        <div class="card-body">

          <div class="form-group">
            <label for="exampleInputEmail1">Tên Sản Phẩm</label>
            <input type="text" value="<%= dataProduct.name_product %>" name="name_product" class="form-control">
          </div>

          <div class="form-group">
            <label for="exampleInputEmail1">Hình Ảnh</label>
            <input type="text" value="<%= dataProduct.img_product %>" name="img_product" class="form-control">
          </div>

          <div class="form-group">
            <label for="exampleInputEmail1">Price Sản Phẩm</label>
            <input type="text" value="<%= dataProduct.price_product %>" name="price_product" class="form-control">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Danh Mục Sản Phẩm</label>
            <select class="custom-select" name="cate_id">
              
              <% for(var i=0; i < dataCategory.length; i++) { %>
                  <option <%= dataCategory[i].id == dataProduct.cate_id ? 'selected' : 'huydev' %> value="<%= dataCategory[i].id %>">
                    <%= dataCategory[i].name_cate %></option>
                    <%  } %>
            </select>
          </div>
          
          
          <div class="form-group">
            <label for="exampleInputEmail1">Mô Tả Sản Phẩm</label>
            <textarea name="desc_product" class="textarea" required=""><%= dataProduct.desc_product %></textarea>
          </div>
          <!-- /.card-body -->

          <div class="card-footer">
            <button type="submit" name="submit" class="btn btn-primary">Lưu</button>
          </div>
      </form>
    </div>
  </section>

</div>


<%- include('_layout/footer.ejs') %>