                          </a>
                          <button
                            type="button"
                            class="btn btn-icon btn-sm"
                            data-toggle="tooltip"
                            data-html="true"
                            data-original-title="Error"
                          >
                            <!-- /removeCart/<%= JSON.stringify(item.item.id_product).replace(/['"]+/g,'') %> -->
                            <a href="#"><i class="fa-solid fa-trash"></i></a>
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% }) %> <% } else { %>
                  <!-- show session cart -->

                  <h6 class="message-text">Giỏ hàng đang rỗng</h6>
                  <!-- end -->
                  <% } %>
                  <div class="panel-footer d-flex space-between">
                    <div class="content">
                      <a href="#" class="btn btn-default btn-sm"
                        ><i
                          class="fa-solid fa-reply"
                          style="margin-right: 6px"
                        ></i
                        >Tiếp tục mua hàng</a
                      >
                      <a
                        data-toggle="modal"
